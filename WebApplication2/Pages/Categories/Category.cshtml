@page
@model WebApplication2.Pages.Categories.IndexModel
@{
}

@*https://icons.getbootstrap.com/*@


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Category List</h1>
        </div>

        <div class="col-6 text-end">
            <a asp-page="Create" class="btn btn-primary"><i class="bi bi-plus-square"></i> Create New Category</a>
        </div>

    </div>


    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Display Order</th>
                        <th>Name</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var category in Model.Categories)
                        {
                            <tr>

                                <td width="10%">@category.DisplayOrder</td>
                                <td width="80%">@category.Name</td>

                                <td>
                                    <div class="w-75 btn-group" role="group">
                                        <a asp-page="Edit" asp-route-id="@category.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                                        <a asp-page="Delete" asp-route-id="@category.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3-fill"></i></a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

